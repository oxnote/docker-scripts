if [ -z "$1" ]; then
	apk update
	apk add --virtual .ruby-builddeps \
			autoconf \
			bison \
			bzip2 \
			bzip2-dev \
			ca-certificates \
			coreutils \
			dpkg-dev dpkg \
			gcc \
			gdbm-dev \
			glib-dev \
			libc-dev \
			libffi-dev \
			libxml2-dev \
			libxslt-dev \
			linux-headers \
			make \
			ncurses-dev \
			libressl \
			libressl-dev \
			procps \
			readline-dev \
			ruby \
			tar \
			yaml-dev \
			zlib-dev \
			xz 
else
	apk del .ruby-builddeps 
fi